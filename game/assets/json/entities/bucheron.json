{
    "id":"bucheron",
    "img":"entities/humain4",
    "title":"Bûcheron",
    "pv":50,
    "script" : {
        "start":{
            "auto_actions" : [
              {"do":["COMPARE bois hero >= 10", "GOTO bois"]}
            ],
            "txt" : "Bonjour bonhomme ! Tu veux de l'or ?",
            "actions":[
                {"txt":"Oh oui !", "do":["GOTO travail"]},
                {"txt":"Non merci.", "do":["GOTO non"]}            ]
          },
          "non":{
            "txt" : "Tu veux te battre ?",
            "actions":[
                {"txt":"Ouais !", "do":["FIGHT"]},
                {"txt":"Non merci.", "do":["EXIT", "GOTO start"]}
            ]
          },
          "travail":{
            "txt" : "Va me chercher du bois et je te donnerai de l'or en échange !",
            "actions":[
                {"txt":"D'accord !", "do":["EXIT", "GOTO start"]}
            ]
          },
           "bois":{
            "txt" : "Alors bonhomme, je vois que tu as du bois ! Je t'échange 10 bûches contre une pièce d'or.",
            "actions":[
                {"txt":"Marché conclu !", "do":["GIVE -10 bois hero", "GIVE +1 or hero"]},
                {"txt":"Non merci !", "do":["EXIT", "GOTO start"]}
            ]
          },
           "dead":{
            "auto_actions" : [
              {"do":["SET 1 invisible"]}
            ],
            "txt" : "Le bûcheron est mort.",
            "actions":[
                {"txt":"Piller le cadavre", "do":["GIVE +100 or hero", "GIVE +1 hache hero", "EXIT"]},
                {"txt":"Partir", "do":["EXIT"]}
            ]
          }
    },
    "attacks":[

        {
            "txt":"Étrangler",
            "types":[],
            "do":[],
            "effect":[
                {
                    "prob":0.5,
                    "txt":"Le bûcheron vous étrangle : -3pv",
                    "do":["HIT 3"]

                },
                {
                    "prob":1,
                    "txt":"Le bûcheron ne parviens pas à vous étrangler.",
                    "do":[]
                }
            ]
        },
        {
            "txt":"Donner un coup de hache",
            "types":[],
            "do":[],
            "effect":[
                {
                    "prob":0.6,
                    "txt":"Le bucheron vous donne un coup de hache : -10pv",
                    "do":["HIT 10"]
                },
                {
                    "prob":1,
                    "txt":"Le bucheron rate son coup de hache.",
                    "do":[]
                }

            ]
        }
    ]
}
